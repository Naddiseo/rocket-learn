{% extends "base" %}

{% block content %}
<form method="post" action="/login">
	<label for="email">Email:
		<input type="text" name="email" id="email" />
	</label>
	<label for="password">Password:
		<input type="password" name="password" id="password" />
	</label>
	<button type="submit">Login!</button>
</form>
{% endblock content%}
